version(1);

project_name = "Codebase";

patterns = {
	"*.c",
	"*.cpp",
	"*.mdesk",
	"*.h",
	"*.bat",
	"*.sh",
	"*.4coder",
	"*.txt",
	"*.glsl",
};

blacklist_patterns = {
	".*",
};

load_paths_custom = {
	{ "./source" },
	{ "./third_party/include/KHR" },
	{ "./third_party/include/md" },
	{ "./third_party/include/stb" },
	{ "./third_party/source" },
	{ "./", .recursive = false },
};

load_paths = {
	{ load_paths_custom, .os = "win"  },
};

command_list = {
	{
		.name = "build",
		.out = "*compilation*",
		.footer_panel = true,
		.save_dirty_files = true,
		.cursor_at_end = false,
		.cmd =
		{
			{ "build.bat", .os = "win" },
		},
	},
	{
		.name = "run",
		.out = "*compilation*",
		.footer_panel = true,
		.save_dirty_files = true,
		.cursor_at_end = true,
		.cmd =
		{
			{ "bin\codebase.exe", .os = "win" },
		},
	},
};

fkey_command[1] = "build";
fkey_command[2] = "run";
